{erl_opts,[debug_info,
           {platform_define,"R14",no_callback_support},
           {platform_define,"^[0-9]+",namespaced_types}]}.
{xref_checks,[undefined_function_calls]}.
{cover_enabled,true}.
{eunit_opts,[verbose]}.
{post_hooks,[{clean,"rm -rf *~ */*~ */*.xfm test/*.beam"}]}.
{deps,[{idna,".*",
             {git,"https://github.com/benoitc/erlang-idna",{tag,"1.0.2"}}},
       {mimerl,".*",{git,"https://github.com/benoitc/mimerl",{tag,"1.0.2"}}},
       {certifi,".*",
                {git,"https://github.com/certifi/erlang-certifi",
                     {tag,"0.3.0"}}},
       {ssl_verify_hostname,".*",
                            {git,"https://github.com/deadtrickster/ssl_verify_hostname.erl",
                                 {tag,"1.0.5"}}}]}.
{profiles,
    [{docs,
         [{deps,
              [{edown,
                   {git,"https://github.com/uwiger/edown.git",{tag,"0.7"}}}]},
          {edoc_opts,
              [{doclet,edown_doclet},
               {source_path,["src/socket","src/http","src/metrics"]},
               {packages,false},
               {subpackages,true},
               {top_level_readme,
                   {"./README.md","http://github.com/benoitc/hackney"}}]}]},
     {test,[{deps,[{cowboy,"1.0.4"}]}]}]}.
{overrides,[]}.
